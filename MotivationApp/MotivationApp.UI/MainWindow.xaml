<Window x:Class="MotivationApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotivationApp.UI"
        mc:Ignorable="d" Height="350" Width="525">
    <Grid>
        <Button x:Name="StartButton"  HorizontalAlignment="Left" Margin="158,112,0,0" VerticalAlignment="Top" Width="201" Height="163" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Click="StartButton_Click">
            <Image Source="Icons/Start.png"></Image>
        </Button>
        <Label x:Name="label" Content="Старт" HorizontalAlignment="Left" Margin="158,22,0,0" VerticalAlignment="Top" Height="85" Width="206" FontFamily="Buxton Sketch" FontSize="72" Foreground="#FFB83A26"/>
    </Grid>
</Window>
