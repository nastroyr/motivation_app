        <Button Name="SchedulerButton" HorizontalAlignment="Left" Margin="421,111,0,0" VerticalAlignment="Top" Width="78" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="77" Click="SchedulerButton_Click">
