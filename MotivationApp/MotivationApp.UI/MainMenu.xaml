<Window x:Class="MotivationApp.UI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotivationApp.UI"
        mc:Ignorable="d"
        Title="MainMenu" Height="300" Width="534.597" ResizeMode="NoResize">
    <Grid>
        <Button Name="BookshelfButton"  HorizontalAlignment="Left" Margin="421,17,0,0" VerticalAlignment="Top" Width="84" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="77" Click="BookshelfButton_Click">
