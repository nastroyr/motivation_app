<Window x:Class="MotivationApp.UI.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotivationApp.UI"
        mc:Ignorable="d"
        Title="ImageWindow" Height="300" Width="300"
        WindowStyle="None"
        WindowState="Maximized">
    <Grid Name="gridMain">
        <Button Name="ButtonClose" Width="39" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,251" Click="ButtonClose_Click">
            <Image Source="Icons/button_cancel.png" Height="30" Width="46" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="1.776"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
    </Grid>
</Window>
